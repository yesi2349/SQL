---Created table for the top 10 music artists of 2022 according to Dailymusicroll.com in 2022

CREATE TABLE Singers_Bios (id INTEGER PRIMARY KEY AUTOINCREMENT,
first_name TEXT,
last_name TEXT, 
birth_year INTEGER,
birthplace TEXT,
year_started INTEGER);

